<div class="result-mixed-section tailwind" {{ block.shopify_attributes }}>
  <div class="flex flex-col px-4 pt-10 pb-24 lg:justify-center sm:px-6 lg:px-8">
    <div class="flex flex-col px-4 h-3/4">
      <div
        class="flex flex-col items-center justify-center w-full max-w-md pt-4 pb-2 mx-auto page_result-section__content"
        {% if settings.animations_reveal_on_scroll %}
          scroll-trigger animate--slide-in
        {% endif %}
      >
        <!-- Card -->
        <div class="flex flex-col max-w-md px-6 pb-8 space-y-6 text-gray-600 bg-gradient-to-r rounded-xl from-gray-50 via-gray-100 to-gray-100 {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          <!-- Icon -->
          <div class="flex flex-col items-center justify-center w-full pt-6 bg-gradient-to-r from-gray-50 via-gray-100 to-gray-100">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-16 h-16 !text-yellow-400 ">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <!-- Title -->
          <div class="flex items-center justify-between space-y-6">
             <div class="!text-center w-full">
              <h1
                class="mx-auto !text-4xl tracking-tight max-w-md {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}""
                {% if settings.animations_reveal_on_scroll %}
                  scroll-trigger animate--slide-in
                {% endif %}
              >
               {{ page.title }}
              </h1>
            </div>
          </div>
          <!-- Content -->
          {{ page.content }}
          <!-- CTA -->
          <div class="flex justify-center w-full mt-8">
            <a
              href="/#pricing"
              id="cta_button__result_qualified_stress__test_the_sensor_now"
              value="Please notify me"
              class="cursor-pointer inline-flex items-center justify-center gap-x-2 rounded-3xl bg-gradient-to-r from-primary via-accent to-orange-600 hover:bg-gradient-to-l hover:scale-105 transition-all px-6 py-3.5 text-base font-medium  text-white shadow-lg focus:outline-none"
            >
              <div>Test the sensor now</div>
            </a>
          </div>
        </div>
      </div>

      <div class="flex flex-col items-center justify-center gap-2 mt-5 sm:flex-row sm:gap-3 {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        <a
          class="inline-flex items-center justify-center w-full gap-2 px-4 py-3 text-sm transition-all border border-transparent cursor-pointer rounded-3xl hover:scale-105 text-highlight sm:w-auto hover:text-highlight focus:outline-none focus:ring-2 ring-offset-white focus:ring-highlight focus:ring-offset-2 dark:ring-offset-slate-900"
          href="/"
        >
          <svg class="w-2.5 h-2.5" width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M11.2792 1.64001L5.63273 7.28646C5.43747 7.48172 5.43747 7.79831 5.63273 7.99357L11.2792 13.64" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          </svg>
          Back to home
        </a>
      </div>
    </div>
  </div>
</div>

{% javascript %}
  document.addEventListener('DOMContentLoaded', () => {
    // Fire the event to GTM Datalayer
    window.dataLayer = window.dataLayer || [];
    window.dataLayer.push({
      event: 'typeformQualified',
    });
  });
{% endjavascript %}

{% stylesheet %}
  .page_result-section__content img {
    border-radius: 1.5rem;
  }
{% endstylesheet %}
