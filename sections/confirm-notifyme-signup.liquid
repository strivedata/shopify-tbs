<div class="confirm-notifyme-signup-section tailwind" {{ block.shopify_attributes }}>
  <div class="flex flex-col px-4 pt-10 pb-24 lg:justify-center sm:px-6 lg:px-8">
    <div class="flex flex-col px-4 h-3/4">
      <div
        class="flex flex-col items-center justify-center w-full max-w-md pt-4 pb-2 mx-auto page_confirm-section__content"
        {% if settings.animations_reveal_on_scroll %}
          scroll-trigger animate--slide-in
        {% endif %}
      >
        <!-- Card -->
        <div class="flex flex-col max-w-md px-6 pb-8 space-y-6 text-gray-600 bg-gradient-to-r rounded-xl from-gray-50 via-gray-100 to-gray-100 {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          <!-- Icon -->
          <div class="flex flex-col items-center justify-center w-full pt-6 bg-gradient-to-r from-gray-50 via-gray-100 to-gray-100">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" class="w-12 h-12 text-highlight">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 7.5h1.5m-1.5 3h1.5m-7.5 3h7.5m-7.5 3h7.5m3-9h3.375c.621 0 1.125.504 1.125 1.125V18a2.25 2.25 0 01-2.25 2.25M16.5 7.5V18a2.25 2.25 0 002.25 2.25M16.5 7.5V4.875c0-.621-.504-1.125-1.125-1.125H4.125C3.504 3.75 3 4.254 3 4.875V18a2.25 2.25 0 002.25 2.25h13.5M6 7.5h3v3H6v-3z" />
            </svg>
          </div>
          <!-- Title -->
          <div class="flex items-center justify-between space-y-6">
             <div class="!text-center w-full">
              <h1
                class="mx-auto !text-3xl tracking-tight max-w-md {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}""
                {% if settings.animations_reveal_on_scroll %}
                  scroll-trigger animate--slide-in
                {% endif %}
              >
               {{ page.title }}
              </h1>
            </div>
          </div>
          <!-- Content -->
          {{ page.content }}
          <!-- CTA -->
          <div class="flex justify-center w-full mt-8">
            <a
              href="/"
              id="cta_button__confirm_notifyme_signup__back_to_home"
              value="Back to home"
              class="cursor-pointer inline-flex items-center justify-center gap-x-2 rounded-3xl bg-gradient-to-r from-primary via-accent to-orange-600 hover:bg-gradient-to-l hover:scale-105 transition-all px-6 py-3.5 text-base font-medium  text-white shadow-lg focus:outline-none"
            >
              <div>Back to home</div>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% javascript %}
  document.addEventListener('DOMContentLoaded', () => {
    // Fire the event to GTM Datalayer
    window.dataLayer = window.dataLayer || [];
    window.dataLayer.push({
      event: 'confirmNotifymeSignup',
    });
  });
{% endjavascript %}

{% stylesheet %}
  .page_confirm-section__content img {
    border-radius: 1.5rem;
  }
{% endstylesheet %}
