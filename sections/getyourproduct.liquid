<script type="text/javascript" defer>
  var handlePricingPlans = function getParams() {
    document.addEventListener('DOMContentLoaded', () => {
      // Get the PRICING params from the URL

      const queryString = window.location.search;
      const urlParams = new URLSearchParams(queryString);

      const pricing_plan = urlParams.get('plan');

      // Get the pricing plan element
      const pricingPlanCard = document.getElementById(pricing_plan);

      // Remove hidden for actvive plan to dhow the selceted Pricing Plan
      pricingPlanCard.classList.remove('hidden');

      // Add query param to the link
      document.getElementById('cta_button__proceed_to_checkout__meta__conversion_event_4').href =
        '/pages/early-access-program?plan=' + pricing_plan;
    });
  };

  if (document.readyState == 'interactive' || document.readyState == 'complete') {
    handlePricingPlans();
  } else {
    handlePricingPlans();
  }
</script>

