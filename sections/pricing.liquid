<div id="{{ section.settings.scrollID }}" class="pricing-section tailwind">
  <!-- Pricing -->
  <div class="max-w-6xl px-4 py-10 mx-auto sm:px-6 lg:px-8 lg:py-14 {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    <!-- Title -->
    <div class="max-w-2xl mx-auto mb-8 text-center lg:mb-14">
      <h2 class="text-3xl font-bold text-gray-800 lg:text-4xl">{{ section.settings.pricing_title }}</h2>
      <p class="mt-3 text-gray-800">
        {{ section.settings.pricing_description }}
        <span class="text-2xl font-bold text-headlines">{{ section.settings.pricing_comparison_amount }}</span>
        {{ section.settings.pricing_description_append }}
      </p>
    </div>
