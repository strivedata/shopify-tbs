                    <span class="text-base font-semibold text-gray-500 dark:text-gray-200">
                      {{- block.settings.monthly_plan_deposit_amount -}}
                    </span>
                    <span class="text-gray-500 ml-31">{{ block.settings.monthly_plan_deposit }}</span>
